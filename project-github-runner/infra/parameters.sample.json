{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "value": "eastus"
        },
        "baseName": {
            "value": "gh-runner"
        },
        "tags": {
            "value": {
                "project": "github-runner"
            }
        },
        "containerImage": {
            "value": "ghcr.io/myorg/github-runner:1.0.0"
        },
        "containerCpu": {
            "value": "2.0"
        },
        "containerMemory": {
            "value": "4Gi"
        },
        "runnerLabels": {
            "value": "self-hosted,azure-container-apps"
        },
        "githubOwner": {
            "value": "myorg"
        },
        "githubRepo": {
            "value": "my-repository"
        },
        "githubPatSecretValue": {
            "value": "<replace-with-secure-pat>"
        },
        "deployContainerRegistry": {
            "value": true
        },
        "acrName": {
            "value": "ghrunneracr1234"
        },
        "acrSku": {
            "value": "Standard"
        }
    }
}